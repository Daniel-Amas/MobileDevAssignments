<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCF5FD"
        android:minHeight="?attr/actionBarSize"
        android:padding="48dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="serif"
        android:text="How To Use"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/tbInfo"
        app:layout_constraintEnd_toEndOf="@+id/tbInfo"
        app:layout_constraintStart_toStartOf="@+id/tbInfo"
        app:layout_constraintTop_toTopOf="@+id/tbInfo" />

    <!-- Title TextView -->

    <!-- Instruction Step 1 -->

    <!-- Instruction Step 2 -->

    <!-- Instruction Step 3 -->

    <!-- Instruction Step 4 -->

    <!-- Instruction Step 5 -->

    <!-- Back Button -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCloseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:backgroundTint="#FCF5FD"
        app:layout_constraintBottom_toBottomOf="@+id/tbInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tbInfo"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/tvStep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:paddingBottom="8dp"
        android:text="1. Enter the mortgage amount in the first field."
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbInfo" />

    <TextView
        android:id="@+id/tvStep2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingBottom="8dp"
        android:text="2. Enter the loan tenure in years in the second field."
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvStep1"
        app:layout_constraintTop_toBottomOf="@+id/tvStep1" />

    <TextView
        android:id="@+id/tvStep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingBottom="8dp"
        android:text="3. Enter the annual interest rate (in %) in the third field."
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvStep2"
        app:layout_constraintTop_toBottomOf="@+id/tvStep2" />

    <TextView
        android:id="@+id/tvStep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingBottom="8dp"
        android:text="4. Click the 'Calculate' button to get the monthly amount."
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvStep3"
        app:layout_constraintTop_toBottomOf="@+id/tvStep3" />

    <TextView
        android:id="@+id/tvStep5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:paddingBottom="8dp"
        android:text="5. The EMI will be displayed at the bottom of the screen."
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvStep4"
        app:layout_constraintTop_toBottomOf="@+id/tvStep4" />


</androidx.constraintlayout.widget.ConstraintLayout>